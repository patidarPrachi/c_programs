// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // Write C code here
    float bs,ta,pf,da=500,ns,gs;
    printf("enter basic salary");
    scanf("%f",&bs);
    ta=bs*0.1;
    printf("ta is %f",ta);
    pf=bs*0.078;
    printf("pf is %f",pf);
    gs=bs+ta+da;
    ns=gs-pf;
    printf("gross salary is %f",gs);
    printf("net salary is %f",ns); 
}

