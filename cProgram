// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to swap using third variable
    int a,b,temp;
    printf("enter two numbers a and b");
    scanf("%d%d",&a,&b);
    printf("\nbefore swaping value of a=%d",a);
    printf("\nbefore swaping value of b=%d",b);
    temp=a;
    a=b;
    b=temp;
    printf("\nafter swaping value of a=%d",a);
    printf("\nafter swaping value of b=%d",b);
}

