// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to check Armstrong of three digit number
    int n, u, t, h , sum;
    printf("enter any three digit number :");
    scanf("%d",&n);
    
    h=(n/100);
    t=(n/10)%10;
    u=n%10;
    sum=h*h*h+t*t*t+u*u*u;
    if (n==sum){
        printf("\n armstrong");
    }else{
    
    printf("\n  not armstrong");
}
}

