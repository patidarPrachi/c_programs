// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to check palindrome of three digit number
    int n, u, t, h , rnum;
    printf("enter any three digit number");
    scanf("%d",&n);
    
    h=(n/100);
    t=(n/10)%10;
    u=n%10;
    rnum=u*100+t*10+h*1;
    if (n==rnum){
        printf("\n palindrome");
    }else{
    
    printf("\n palindrome");
}
}

