// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to swap without using third variable
    float f,c;
    printf("enter temperature in celcius");
    scanf("%f",&c);
    f=1.8*c+32;
    printf("\ntemperature in fahrenheit=%f",f);
}

