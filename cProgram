// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to calculate simple interest
    float r,p,t,si;
    printf("enter rate r");
    printf("\nenter principle p");
    printf("\nenter time t");
    scanf("%f%f%f",&r,&p,&t);
    si=p*t*r/100;
    printf("simple intereat is =%f",si);
}

