// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to calculate the sum of first and last digit of four digit number
    int n, u, t, h, th, sum;
    printf("enter any four digit number");
    scanf("%d",&n);
    th=n/1000;
    h=(n/100)%10;
    t=(n/10)%10;
    u=n%10;
    sum=th+u;
    printf("\nsum of first and last digit number is %d",sum);
}

