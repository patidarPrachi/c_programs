// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to calculate year is leap or not
    int y;
    printf("enter year :");
    scanf("%d",&y);
    if ((y%4==0) && ((y%400==0) || (y%100!=0)))
    {
        printf("\n It is leap year");
    }else{
        printf("\n  It is not leap year");
    }
}

