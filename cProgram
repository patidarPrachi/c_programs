// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to calculate Area of different shapesbased on user choice S, C or R
    char ch;
    int area;
    printf("enter your choice ch :\nenter S for square\n C for circle \n R for rectangle  :");
    scanf("%c",&ch);
    
    switch(ch)
    {
        case 's': int side;
                  printf("\nenter side");
                  scanf("%d",&side);
                  area=side*side;
                  printf("\narea of square is %d",area);
                  break;
        case 'c': int r, pi=3.14;
                  printf("\nenter radius : ");
                  scanf("%d",&r);
                  area=pi*r*r;;
                  printf("\narea of circle is %d",area);
                  break;
        case 'r': int l, b;
                  printf("\nenter length and width : ");
                  scanf("%d%d",&l,&b);
                  printf("\nvalue of %d %d : ",l,b);
                  area=l*b;
                  printf("\n area of rectangle is %d",area);
                  break;
        default : printf("\n invalid choice");
    }
}

