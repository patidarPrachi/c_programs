// Online C compiler to run C program online
#include <stdio.h>

void main() {
    // to calculate area of triangle
    float b,h, area;
    printf("enter base and height of a tringle");
    scanf("%f%f",&b,&h);
    area=0.5*b*h;
    printf("area =%f",area);
}

